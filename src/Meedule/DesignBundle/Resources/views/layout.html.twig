{% extends '::base.html.twig' %}
{% from 'MeeduleDesignBundle::flash.html.twig' import flash %}

{% block stylesheets %}
    {% stylesheets
        'bundles/meeduledesign/bootstrap/bootstrap.less'
        'bundles/meeduledesign/css/zocial.less'
        'bundles/meeduledesign/css/application.less'
        'bundles/meeduledesign/css/ui-lightness/jquery-ui-1.8.17.custom.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets
            'bundles/meeduledesign/css/print.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" media="print" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        'bundles/meeduledesign/bootstrap/js/bootstrap-alert.js'
        'bundles/meeduledesign/bootstrap/js/bootstrap-button.js'
        'bundles/meeduledesign/bootstrap/js/bootstrap-dropdown.js'
        'bundles/meeduledesign/bootstrap/js/bootstrap-tooltip.js'
        'bundles/meeduledesign/bootstrap/js/bootstrap-popover.js'
        'bundles/meeduledesign/js/jquery-ui-1.8.17.custom.min.js'
    %}
<script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
<script>
    $(document).ready(function(){
        $("a[rel=popover]").popover();
        $("*[rel=tooltip]").tooltip();
    });
</script>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/it_IT/all.js#xfbml=1&appId=364269810337276";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
{% endblock %}

{% block body %}
    {% block topbar %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="{{ path('index') }}">Meedule</a>
                <div class="pull-right">
                    <a 
                        href="#" 
                        class="btn" 
                        rel="popover" 
                        data-placement="bottom" 
                        data-content="
                        <a href='#'>Symfony</a>, <a href='#'>Bootstrap</a>, <a href='#'>Zocials</a>, <a href='#'>Abmundi</a> and <a href='#'>Doodle</a> for their useful inspirations
                        " 
                        data-original-title="Thanks to a lot of tools"
                        id="thanks">
                            <i class="icon-heart"></i></a>
                    <a 
                        class='zocial twitter' 
                        rel="tooltip" 
                        title="Se ti interessa" 
                        data-placement="bottom"
                        href="https://www.facebook.com/Meedule">Followa</a>
                    <a 
                        class='zocial facebook' 
                        rel="tooltip" 
                        title="Se ti piace"
                        data-placement="bottom"
                        href="https://www.facebook.com/Meedule">Segui</a>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

    <div class="container-fluid">
        <div class="content">
            {% block flash %}
                {{ flash() }}
            {% endblock %}
                
            {% block content %}{% endblock%}
        </div>
    </div>
    
    <hr />
    <div class="container-fluid">
        &copy; 2013 Meedule - 
        <a class="zocial twitter" href="https://github.com/fabiofabbrucci/Meedule">Fabbrucci</a> 
        <a class="zocial github" href="https://github.com/fabiofabbrucci/Meedule">Contribute</a>
    </div>
                
