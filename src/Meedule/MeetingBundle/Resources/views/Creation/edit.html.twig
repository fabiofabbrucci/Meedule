{% extends 'MeeduleDesignBundle::layout.html.twig' %}

{% block content %}
    <h1>Crea la tua agenda</h1>
    
    <form action="{{ path('meeting_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('meeting') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('meeting_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
