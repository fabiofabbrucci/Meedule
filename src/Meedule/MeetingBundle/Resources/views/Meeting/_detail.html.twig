<h1>{{ entity.title }}</h1>
{% if entity.date %}
    <i class="icon-calendar"></i> {{ entity.date|date(date_simple_format)}}
    {% if entity.time %}
        - {{ entity.time|date(time)}}
    {% endif %}
{% endif %}
{% if entity.address %}
    <a 
        class="btn btn-small"
        target="_blank"
        href="https://maps.google.it/?t=m&amp;q={{ entity.address}}">
        <i class="icon-globe"></i> 
    </a>
    {{ entity.address}} 
{% endif %}
<i class="icon-user"></i> {{ entity.name }}
{% if entity.description %}
    <p>{{ entity.description }}</p>
{% endif %}
{% if entity.doodle %}
    <br />
    <img src={{ asset('bundles/meeduledesign/img/doodle.ico') }} />
    <a 
        target="_blank"
        href="{{ entity.doodle }}">
        Doodle
    </a>
{% endif %}